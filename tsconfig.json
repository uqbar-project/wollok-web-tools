{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    // "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "lib": ["es2016", "dom", "es5"]
  },
  "include": ["src/**/*.ts"]
}
