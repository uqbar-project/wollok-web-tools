{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "lib": [
      "es2016",
      "dom",
      "es5"
    ]
  },
  "include": [
    "src/**/*"
  ],
}