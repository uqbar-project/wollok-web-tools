{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "outDir": "temp",
    "lib": ["ES2021"],
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["./test/**/*.ts"],
  "exclude": ["**/*.js", "build", "node_modules"]
}
